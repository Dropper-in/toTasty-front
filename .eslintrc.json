{
  "extends": ["airbnb", "airbnb-typescript", "airbnb/hooks"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["node_modules/"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "react/react-in-jsx-scope": "off"
  }
}
